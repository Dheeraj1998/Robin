<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.robin.LoginActivity">

    <ImageView
        android:id="@+id/image_appicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="center"
        android:src="@drawable/app_icon"/>

    <TextView
        android:id="@+id/text_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_appicon"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="ROBIN "
        android:textColor="@color/colorFont"
        android:textSize="45sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edittext_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_appname"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_rectangle_edittext"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/username_drawable"
        android:hint="Username"
        android:padding="10dp"
        android:textColor="@color/colorFont"
        android:textColorHint="@color/colorHintText" />

    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_username"
        android:layout_margin="25dp"
        android:background="@drawable/rounded_rectangle_edittext"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/password_drawable"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/colorFont"
        android:textColorHint="@color/colorHintText"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_password"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorButton"
        android:onClick="login"
        android:padding="10dp"
        android:text="LOGIN"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorButtonSecondary"
        android:padding="10dp"
        android:text="NEW USER ?"
        android:textStyle="bold"/>
    
</RelativeLayout>
